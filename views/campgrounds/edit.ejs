<% layout('layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div>
            <label for="title"></label>
            <input type="text" name="campground[title]" id="title" placeholder="title" value="<%= campground.title%>">
        </div>
        <div>
            <label for="location"></label>
            <input type="text" name="campground[location]" id="location" placeholder="location" value="<%= campground.location%>">
        </div>
        <button>Update Campground</button>
    </form>
    <footer>
        <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
    </footer>
